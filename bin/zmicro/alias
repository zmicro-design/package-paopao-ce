#!/bin/bash

export PACKAGE_NAME="paopao-ce"
import "$ZMICRO_PACKAGES_PATH/$PACKAGE_NAME/config"
import "$ZMICRO_PACKAGES_PATH/$PACKAGE_NAME/core"

help() {
  echo "Usage:"
  echo "  zmicro paopao-ce <args ...>"
  echo ""

  paopao-ce --help

  echo "Read More about how to use $PACKAGE_NAME:"
  echo "    https://github.com/rocboss/paopao-ce"
}

version() {
  # paopao-ce --version
  echo "$PACKAGE_CORE_VERSION"
}

core() {
  # context directory
  local context="$ZMICRO_PACKAGES_DATA_PATH/paopao-ce"
  if [ ! -d "$context" ]; then
    mkdir -p $context
  fi
  cd $context
  # context directory

  case $1 in
  -h | --help | help)
    help
    ;;
  -v | --version | version)
    version
    ;;
  *)
    paopao-ce "$@"
    ;;
  esac
}

run() {
  core "$@"
}

run "$@"
